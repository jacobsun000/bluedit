doctype html
html
  head
    include common-head.pug
    title Bluedit / Home
    script.
      function likePost(id, button) {
        fetch('/like', { 
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ id })
        })
        .then(response => {
          if (response.ok) {
            button.innerText = 'üíô' + button.innerText.slice(2);
            button.disabled = true;
          } else {
            window.location.assign('/login');
          }
        })
        .catch(error => console.error('Error:', error));
      }
  body
    include menubar.pug
    +menubar('main', user)
    main#content
      #search-box
        form(action="/search" method="get")
          input(type="text" name="q" placeholder="Search blogs..." value=searchText)
          button(type="submit") Search
      #blog-list
        each blog in blogs
          article.blog-post
            .content-container
              a(href=`/blog?id=${blog.id}`)
                .text-container
                  h2.blog-title= blog.title
                  p.blog-text-preview= blog.preview
              if blog.image
                .image-container
                  img(src=blog.image, alt="Blog Image")
              button(onclick=`likePost(${blog.id}, this)`) ü§ç #{blog.likes}
      include pagination.pug
      +pagination('/', page)
